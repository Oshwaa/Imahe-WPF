<Window x:Class="Imahe.views.UserControls.progressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Imahe.views.UserControls"
        mc:Ignorable="d"
        Title="progressBar" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">
            Processing, please wait...
        </TextBlock>
        <ProgressBar IsIndeterminate="True" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Width="200" 
                     Height="20" 
                     Margin="0,50,0,0"/>
    </Grid>
</Window>
