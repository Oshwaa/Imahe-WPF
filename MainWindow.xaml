<Window x:Class="Imahe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Imahe"
        xmlns:userControls="clr-namespace:Imahe.views.UserControls"
        
        mc:Ignorable="d"
        MinWidth="1200"
        MinHeight="700"
        Title="Imahe" Height="700" Width="1200" WindowStyle="ThreeDBorderWindow" Icon="assets/images/icon.png">
    
    
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".21*"/>
            <ColumnDefinition Width=".79*"/>
        </Grid.ColumnDefinitions>
        <userControls:sidePanel x:Name="sidePanel" Grid.Column="0" Background="GhostWhite"/>
        <userControls:displayPanel x:Name="displayPanel" Grid.Column="1" Background="white"/>
    </Grid>




</Window>
